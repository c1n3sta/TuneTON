# Ensure exact versions are installed
save-exact = true

# Configure cache settings
cache = .npm-cache
cache-max = 0
cache-min = 10

# Network settings
fetch-retries = 3
fetch-retry-mintimeout = 10000
fetch-retry-maxtimeout = 60000

# Security
engine-strict = true
strict-ssl = true

# Package registry
registry = https://registry.npmjs.org/

# Performance
prefer-offline = true
prefer-fetch = true
prefer-dedupe = true

# Logging
loglevel = error
