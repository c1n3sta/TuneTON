# Configure npm to use exact versions
save-exact=true

# Configure package-lock to version 2
package-lock=true
package-lock-only=false

# Configure cache settings
cache-min=9999999
prefer-offline=true

# Configure network retry settings
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Configure audit settings
audit=false
fund=false

# Configure engine strict
engine-strict=true

# Configure scripts
ignore-scripts=false

# Configure package manager
# This ensures consistent package manager usage
engine-strict=true
