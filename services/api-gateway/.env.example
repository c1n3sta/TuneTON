# Server Configuration
NODE_ENV=development
SERVICE_NAME=api-gateway
PORT=3000

# Service URLs (used by shared config)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
TRACK_SERVICE_URL=http://track-service:3003
AUDIO_SERVICE_URL=http://audio-service:3004
PLAYLIST_SERVICE_URL=http://playlist-service:3005
STREAMING_SERVICE_URL=http://streaming-service:3006

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=tuneton-api
JWT_AUDIENCE=tuneton-client

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@db:5432/tuneton_gateway
DATABASE_LOGGING=false
DATABASE_SYNCHRONIZE=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=86400

# Message Queue
MQ_URL=amqp://rabbitmq:5672

# Feature Flags
FEATURE_TELEGRAM_AUTH=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_AUDIO_PROCESSING=true
